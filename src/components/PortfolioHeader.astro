---
interface Profile {
  network: string;
  url: string;
}

interface Props {
  name: string;
  label: string;
  headline: string;
  tagline: string;
  email: string;
  availability: string;
  currentFocus: string;
  profiles: Profile[];
}

const { name, label, headline, tagline, email, availability, currentFocus, profiles } = Astro.props;

const linkedIn = profiles.find(p => p.network === 'LinkedIn');
const github = profiles.find(p => p.network === 'GitHub');
---

<div class="grid grid-cols-1 md:grid-cols-12 gap-6 mb-6">
  <!-- Hero Section -->
  <header class="bento-card md:col-span-8 p-8 md:p-12 flex flex-col justify-between group relative overflow-hidden" aria-labelledby="hero-name">
    <div class="absolute inset-0 opacity-5 group-hover:opacity-10 transition-opacity pointer-events-none">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <defs>
          <pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse">
            <path d="M 10 0 L 0 0 0 10" fill="none" stroke="currentColor" stroke-width="0.5"/>
          </pattern>
        </defs>
        <rect width="100" height="100" fill="url(#grid)"/>
      </svg>
    </div>
    <div class="relative z-10">
      <div class="flex items-center gap-4 mb-6">
        <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center shadow-lg shadow-indigo-500/20" aria-hidden="true">
          <span class="material-symbols-outlined text-white text-3xl">terminal</span>
        </div>
        <div>
          <h1 id="hero-name" class="text-5xl md:text-7xl font-extrabold text-white tracking-tighter">{name}</h1>
        </div>
      </div>
      <p class="text-xl md:text-2xl text-slate-400 leading-relaxed max-w-2xl font-light">
        {headline.split('scale effortlessly')[0]}<span class="text-white font-semibold">scale effortlessly</span>{headline.split('scale effortlessly')[1] || '.'} {tagline}
      </p>
    </div>

    <div class="relative z-10 mt-12 flex flex-wrap gap-6 items-center border-t border-slate-800 pt-8">
      <div class="flex items-center gap-3">
        <div class="relative">
          <div class="w-3 h-3 bg-green-500 rounded-full animate-ping absolute opacity-75"></div>
          <div class="w-3 h-3 bg-green-500 rounded-full"></div>
        </div>
        <span class="font-mono text-xs text-slate-400">{availability}</span>
      </div>
      <nav class="flex gap-4" aria-label="Social links">
        {github && (
          <a href={github.url} target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded" aria-label="GitHub profile">
            <span class="material-symbols-outlined" aria-hidden="true">code</span>
          </a>
        )}
        {linkedIn && (
          <a href={linkedIn.url} target="_blank" rel="noopener noreferrer" class="text-slate-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded" aria-label="LinkedIn profile">
            <span class="material-symbols-outlined" aria-hidden="true">person</span>
          </a>
        )}
        <a href={`mailto:${email}`} class="text-slate-400 hover:text-white transition-colors focus:outline-none focus:ring-2 focus:ring-indigo-500 rounded" aria-label="Send email">
          <span class="material-symbols-outlined" aria-hidden="true">mail</span>
        </a>
      </nav>
    </div>
  </header>

  <!-- Status Card -->
  <section class="bento-card md:col-span-4 p-8 flex flex-col justify-between bg-gradient-to-b from-slate-900 to-slate-950" aria-labelledby="status-heading">
    <div class="space-y-6">
      <div class="flex justify-between items-start">
        <h2 id="status-heading" class="text-xs font-bold text-slate-500 uppercase tracking-widest">Status</h2>
        <span class="text-[10px] font-mono text-indigo-400 bg-indigo-500/10 px-2 py-0.5 rounded">ONLINE</span>
      </div>

      <div class="space-y-4">
        <div class="flex justify-between items-end border-b border-slate-800 pb-3">
          <div>
            <p class="text-[10px] font-mono text-slate-500 uppercase">Core Expertise</p>
            <p class="text-white font-medium">AWS Solutions Architect</p>
          </div>
          <span class="text-indigo-400 font-mono text-xs">Professional</span>
        </div>
        <div class="flex justify-between items-end border-b border-slate-800 pb-3">
          <div>
            <p class="text-[10px] font-mono text-slate-500 uppercase">Total Experience</p>
            <p class="text-white font-medium">14+ Years</p>
          </div>
          <span class="text-indigo-400 font-mono text-xs">Senior+</span>
        </div>
        <div class="flex justify-between items-end border-b border-slate-800 pb-3">
          <div>
            <p class="text-[10px] font-mono text-slate-500 uppercase">Current Focus</p>
            <p class="text-white font-medium">{currentFocus}</p>
          </div>
          <span class="text-indigo-400 font-mono text-xs">Active</span>
        </div>
      </div>
    </div>

    <a href={`mailto:${email}`} class="w-full group relative inline-flex items-center justify-center p-0.5 overflow-hidden text-sm font-medium text-white rounded-xl bg-gradient-to-br from-indigo-500 to-purple-500 hover:text-white focus:ring-4 focus:outline-none focus:ring-indigo-500 focus:ring-offset-2 transition-all" aria-label="Get in touch via email">
      <span class="relative w-full px-5 py-3 transition-all ease-in duration-75 bg-slate-950 rounded-lg group-hover:bg-opacity-0 text-center">
        Get In Touch
      </span>
    </a>
  </section>
</div>
