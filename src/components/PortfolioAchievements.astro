---
interface Achievement {
  title: string;
  description: string;
}

interface Props {
  achievements: Achievement[];
  summary: string;
}

const { achievements, summary } = Astro.props;

// Icons for each achievement type
const icons = ['verified_user', 'account_balance', 'speed', 'rocket_launch'];

// Bold specific keywords in summary
const boldWords = ['React', 'React Native', 'AWS', 'TypeScript', 'Node.js', 'Terraform', 'WebAuthn', 'OAuth2', 'OIDC', 'MFA', 'Claude', 'Amazon Bedrock', 'Tesco', 'Chase UK', 'Cisco'];
let formattedSummary = summary;
boldWords.forEach(word => {
  formattedSummary = formattedSummary.replace(new RegExp(`\\b${word}\\b`, 'g'), `<strong class="font-bold">${word}</strong>`);
});
---

<section class="bento-card p-6 mb-6" aria-labelledby="achievements-heading">
  <div class="flex items-center gap-2 mb-6">
    <span class="material-symbols-outlined text-indigo-400" aria-hidden="true">emoji_events</span>
    <h2 id="achievements-heading" class="text-lg font-bold text-white">Key Achievements</h2>
  </div>

  <!-- Profile Summary -->
  <div class="mb-6 text-sm text-slate-300 leading-relaxed" set:html={formattedSummary} />

  <!-- Achievement Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    {achievements.map((a, i) => (
      <div class="achievement-card p-4 rounded-xl bg-slate-900/50 border border-slate-800 hover:border-indigo-500/30 transition-all">
        <div class="flex items-start gap-3">
          <div class="w-10 h-10 rounded-lg bg-indigo-500/20 flex items-center justify-center flex-shrink-0">
            <span class="material-symbols-outlined text-indigo-400 text-lg">{icons[i % icons.length]}</span>
          </div>
          <div>
            <h3 class="font-bold text-white text-sm mb-1">{a.title}</h3>
            <p class="text-xs text-slate-400 leading-relaxed">{a.description}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
