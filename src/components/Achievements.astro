---
interface Achievement {
  title: string;
  description: string;
}

interface Props {
  achievements: Achievement[];
}

const { achievements } = Astro.props;
---

<section class="section-box p-6 flex flex-col">
  <h2 class="text-2xl md:text-3xl font-black tracking-tight mb-6">LEADERSHIP & ARCHITECTURE</h2>
  <div class="mb-4">
    <h3 class="text-sm font-bold tracking-wide text-gray-500 dark:text-gray-400 mb-4 flex items-center gap-2">
      <span class="text-gray-900 dark:text-gray-100">/</span> MAJOR ACHIEVEMENTS
    </h3>
  </div>
  <div class="space-y-5 flex-1">
    {achievements.map(a => (
      <div class="mb-5 last:mb-0">
        <div class="flex items-start gap-2">
          <span class="text-gray-900 dark:text-gray-100 font-bold mt-0.5">â€¢</span>
          <div>
            <div class="font-bold text-sm uppercase tracking-wide mb-1">{a.title}</div>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{a.description}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>
