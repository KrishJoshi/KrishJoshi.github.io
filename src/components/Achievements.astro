---
interface Achievement {
  title: string;
  description: string;
}

interface Props {
  achievements: Achievement[];
  summary: string;
}

const { achievements, summary } = Astro.props;

const icons = ['cloud', 'account_balance', 'dns', 'public'];

// Bold specific keywords in summary
const boldWords = ['React', 'React Native', 'AWS', 'TypeScript', 'Node.js', 'Terraform', 'WebAuthn', 'OAuth2', 'OIDC', 'MFA', 'Claude', 'Amazon Bedrock', 'Tesco', 'Chase UK', 'Cisco'];
let formattedSummary = summary;
boldWords.forEach(word => {
  formattedSummary = formattedSummary.replace(new RegExp(`\\b${word}\\b`, 'g'), `<strong class="font-bold">${word}</strong>`);
});
---

<section class="section-box p-6 flex flex-col">
  <h2 class="text-xs font-bold text-gray-500 dark:text-slate-500 uppercase tracking-widest mb-5 flex items-center gap-2">
    <span class="material-symbols-outlined text-sm">emoji_events</span>
    Key Achievements
  </h2>

  <!-- Profile Summary -->
  <div class="mb-6 text-xs text-gray-700 dark:text-gray-300 leading-relaxed" set:html={formattedSummary} />

  <!-- Achievement Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 flex-1">
    {achievements.map((a, i) => (
      <div class="achievement-card flex items-start gap-3 p-3 rounded-xl bg-white dark:bg-gray-800 text-gray-900 dark:text-white">
        <div class="w-9 h-9 rounded-lg bg-gray-900 dark:bg-indigo-500/20 flex items-center justify-center flex-shrink-0">
          <span class="material-symbols-outlined text-white dark:text-indigo-400 text-base">{icons[i % icons.length]}</span>
        </div>
        <div>
          <h3 class="font-bold text-sm text-gray-900 dark:text-white mb-0.5">{a.title}</h3>
          <p class="text-xs text-gray-600 dark:text-gray-400 leading-snug">{a.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
