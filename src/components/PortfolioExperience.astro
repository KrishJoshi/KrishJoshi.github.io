---
interface Job {
  name: string;
  position: string;
  startDate: string;
  endDate?: string;
  summary?: string;
  highlights?: string[];
  keywords?: string[];
  stack?: string;
}

interface Props {
  work: Job[];
}

const { work } = Astro.props;

function formatDateRange(start: string, end?: string): string {
  const formatDate = (dateStr?: string) => {
    if (!dateStr) return 'Present';
    const [year, month] = dateStr.split('-');
    const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    return month ? `${months[parseInt(month) - 1]} ${year}` : year;
  };
  return `${formatDate(start)} — ${formatDate(end)}`;
}

// Split into recent (featured) and earlier roles - show more featured jobs now we have rich descriptions
const recentJobs = work.slice(0, 5);
const earlierJobs = work.slice(5);
---

<section class="mb-6" id="portfolio-experience" aria-labelledby="experience-heading">
  <h2 id="experience-heading" class="text-xs font-bold text-slate-500 uppercase tracking-widest mb-6 flex items-center gap-2">
    <span class="material-symbols-outlined text-sm" aria-hidden="true">history</span>
    Professional Evolution
  </h2>

  <!-- Recent/Featured roles -->
  <div class="space-y-4 mb-8" role="list" aria-label="Featured work experience">
    {recentJobs.map(job => (
      <article class="portfolio-job-card section-box p-6 bg-slate-900/30 backdrop-blur border-slate-700 border-l-2 transition-all duration-300" data-company={job.name} role="listitem">
        <div class="flex flex-wrap items-start justify-between gap-2 mb-2">
          <h3 class="text-xl font-black text-white">{job.name}</h3>
          <span class="px-3 py-1 bg-slate-800 text-slate-400 rounded-full text-xs font-semibold">
            {formatDateRange(job.startDate, job.endDate)}
          </span>
        </div>

        <p class="text-sm font-semibold text-emerald-400 mb-3">{job.position}</p>

        {job.summary && (
          <p class="text-slate-300 text-sm mb-4 leading-relaxed">{job.summary}</p>
        )}

        {job.highlights && job.highlights.length > 0 && (
          <ul class="space-y-2 mb-4">
            {job.highlights.map(h => (
              <li class="flex items-start gap-2 text-sm text-slate-300">
                <span class="text-emerald-500 mt-0.5">◦</span>
                <span set:html={h.replace(/\*\*([^*]+)\*\*/g, '<span class="text-indigo-400 font-medium">$1</span>')} />
              </li>
            ))}
          </ul>
        )}

        {job.stack && (
          <div class="mt-4 pt-4 border-t border-slate-700/50">
            <span class="text-[10px] font-bold uppercase tracking-wider text-slate-500">Stack: </span>
            <span class="text-xs text-slate-400">{job.stack}</span>
          </div>
        )}
      </article>
    ))}
  </div>

  <!-- Earlier roles - compact grid -->
  {earlierJobs.length > 0 && (
    <div>
      <h3 class="text-xs font-bold uppercase tracking-widest text-slate-500 mb-4">Earlier Experience</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4" role="list" aria-label="Earlier work experience">
        {earlierJobs.map(job => (
          <article class="portfolio-job-card section-box p-5 bg-slate-900/20 backdrop-blur border-slate-700/50 transition-all duration-300" data-company={job.name} role="listitem">
            <div class="flex items-start justify-between gap-2 mb-1">
              <h4 class="font-bold text-white text-sm">{job.name}</h4>
              <span class="text-[10px] text-slate-500 whitespace-nowrap">{job.startDate.split('-')[0]}</span>
            </div>
            <p class="text-xs font-semibold text-emerald-400/80 mb-2">{job.position}</p>
            {job.summary && (
              <p class="text-xs text-slate-400 mb-3 leading-relaxed">{job.summary}</p>
            )}
            {job.stack && (
              <div class="pt-2 border-t border-slate-700/30">
                <span class="text-[9px] font-bold uppercase tracking-wider text-slate-500">Stack: </span>
                <span class="text-[10px] text-slate-500">{job.stack}</span>
              </div>
            )}
          </article>
        ))}
      </div>
    </div>
  )}
</section>
