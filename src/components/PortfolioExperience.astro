---
interface Job {
  name: string;
  position: string;
  startDate: string;
  endDate?: string;
  summary?: string;
  highlights?: string[];
  keywords?: string[];
  stack?: string;
}

interface Props {
  work: Job[];
}

const { work } = Astro.props;

function formatDateRange(start: string, end?: string): string {
  const formatDate = (dateStr?: string) => {
    if (!dateStr) return 'Present';
    const [year, month] = dateStr.split('-');
    const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    return month ? `${months[parseInt(month) - 1]} ${year}` : year;
  };
  return `${formatDate(start)} — ${formatDate(end)}`;
}

// Company logos (grayscale by default, shown in small circle) - SVG preferred
const companyLogos: Record<string, string> = {
  'CaspianOne Open Banking': '/portfolio/logos/caspianone.png',
  'Climatise': '/portfolio/logos/climatise.svg',
  'Tesco': '/portfolio/logos/tesco.svg',
  'Chase UK (10x Future Tech)': '/portfolio/logos/chase.png',
  'Cisco': '/portfolio/logos/cisco.svg',
};

// Project images (full-color, shown on card hover as background) - WebP format
const projectImages: Record<string, string> = {
  'CaspianOne Open Banking': '/portfolio/caspianone.webp',
  'Climatise': '/portfolio/climatise.webp',
  'Tesco': '/portfolio/tesco.webp',
  'Chase UK (10x Future Tech)': '/portfolio/chaseuk.webp',
  'Cisco': '/portfolio/cisco.webp',
};

// Split into recent (featured) and earlier roles - show more featured jobs now we have rich descriptions
const recentJobs = work.slice(0, 5);
const earlierJobs = work.slice(5);
---

<section class="mb-6" id="portfolio-experience" aria-labelledby="experience-heading">
  <h2 id="experience-heading" class="text-xs font-bold text-gray-500 dark:text-slate-500 uppercase tracking-widest mb-6 flex items-center gap-2">
    <span class="material-symbols-outlined text-sm" aria-hidden="true">history</span>
    Professional Evolution
  </h2>

  <!-- Recent/Featured roles -->
  <div class="space-y-4 mb-8" role="list" aria-label="Featured work experience">
    {recentJobs.map(job => (
      <article class="portfolio-job-card group/card cursor-pointer border-[1.5px] border-gray-900 dark:border-gray-600 rounded-3xl p-6 bg-gray-50 dark:bg-slate-900/30 backdrop-blur border-l-2 transition-all duration-300 hover:border-indigo-500/30 relative overflow-hidden" data-company={job.name} data-project-image={projectImages[job.name]} role="listitem">
        <div class="flex flex-wrap items-start justify-between gap-3 mb-2 relative z-10">
          <div class="flex items-center gap-3">
            {(companyLogos[job.name] || projectImages[job.name]) && (
              <div
                class="logo-image-container relative w-20 h-20 rounded-full group-hover/card:rounded-xl overflow-hidden ring-2 ring-gray-200 dark:ring-slate-700 group-hover/card:ring-indigo-500 transition-all flex-shrink-0 bg-white dark:bg-slate-800"
              >
                {/* Company Logo - visible by default, fades out on hover */}
                {companyLogos[job.name] && (
                  <img
                    src={companyLogos[job.name]}
                    alt={`${job.name} logo`}
                    loading="lazy"
                    class={`absolute inset-0 w-full h-full object-contain group-hover/card:opacity-0 transition-opacity duration-500 ${job.name === 'CaspianOne Open Banking' ? 'p-0' : job.name === 'Climatise' ? 'p-3 left-[-2px]' : 'p-2'}`}
                  />
                )}
                {/* Project Image - hidden by default, expands on hover to card height */}
                {projectImages[job.name] && (
                  <div class="project-image-morph absolute inset-0 opacity-0 group-hover/card:opacity-100 transition-all duration-500 origin-center" style="will-change: transform, opacity;">
                    <img
                      src={projectImages[job.name]}
                      alt={`${job.name} project`}
                      loading="lazy"
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
              </div>
            )}
            <h3 class="text-xl font-black text-gray-900 dark:text-white">{job.name}</h3>
          </div>
          <span class="px-3 py-1 bg-gray-200 dark:bg-slate-800 text-gray-600 dark:text-slate-400 rounded-full text-xs font-semibold">
            {formatDateRange(job.startDate, job.endDate)}
          </span>
        </div>

        <p class="text-sm font-semibold text-emerald-600 dark:text-emerald-400 mb-3">{job.position}</p>

        {job.summary && (
          <p class="text-gray-900 dark:text-slate-300 text-sm mb-4 leading-relaxed">{job.summary}</p>
        )}

        {job.highlights && job.highlights.length > 0 && (
          <ul class="space-y-2 mb-4">
            {job.highlights.map(h => (
              <li class="flex items-start gap-2 text-sm text-gray-900 dark:text-slate-300">
                <span class="text-emerald-600 dark:text-emerald-500 mt-0.5">◦</span>
                <span set:html={h.replace(/\*\*([^*]+)\*\*/g, '<span class="text-indigo-600 dark:text-indigo-400 font-medium">$1</span>')} />
              </li>
            ))}
          </ul>
        )}

        {job.stack && (
          <div class="mt-4 pt-4 border-t border-gray-200 dark:border-slate-700/50">
            <span class="text-[10px] font-bold uppercase tracking-wider text-gray-500 dark:text-slate-500">Stack: </span>
            <span class="text-xs text-gray-600 dark:text-slate-400">{job.stack}</span>
          </div>
        )}
      </article>
    ))}
  </div>

  <!-- Earlier roles - compact grid -->
  {earlierJobs.length > 0 && (
    <div>
      <h3 class="text-xs font-bold uppercase tracking-widest text-gray-500 dark:text-slate-500 mb-4">Earlier Experience</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4" role="list" aria-label="Earlier work experience">
        {earlierJobs.map(job => (
          <article class="portfolio-job-card group/card cursor-pointer border-[1.5px] border-gray-900 dark:border-gray-600 rounded-3xl p-5 bg-gray-50 dark:bg-slate-900/20 backdrop-blur transition-all duration-300 hover:border-indigo-500/30 relative overflow-hidden" data-company={job.name} data-project-image={projectImages[job.name]} role="listitem">
            <div class="flex items-start justify-between gap-2 mb-1 relative z-10">
              <div class="flex items-center gap-2">
                {(companyLogos[job.name] || projectImages[job.name]) && (
                  <div
                    class="logo-image-container relative w-16 h-16 rounded-full group-hover/card:rounded-lg overflow-hidden ring-1 ring-gray-200 dark:ring-slate-700 group-hover/card:ring-indigo-500 transition-all flex-shrink-0 bg-white dark:bg-slate-800"
                  >
                    {companyLogos[job.name] && (
                      <img
                        src={companyLogos[job.name]}
                        alt={`${job.name} logo`}
                        loading="lazy"
                        class={`absolute inset-0 w-full h-full object-contain grayscale group-hover/card:opacity-0 transition-opacity duration-500 ${job.name === 'CaspianOne Open Banking' ? 'p-0' : job.name === 'Climatise' ? 'p-3' : 'p-2'}`}
                      />
                    )}
                    {projectImages[job.name] && (
                      <div class="project-image-morph absolute inset-0 opacity-0 group-hover/card:opacity-100 transition-all duration-500 origin-center" style="will-change: transform, opacity;">
                        <img
                          src={projectImages[job.name]}
                          alt={`${job.name} project`}
                          loading="lazy"
                          class="w-full h-full object-cover"
                        />
                      </div>
                    )}
                  </div>
                )}
                <h4 class="font-bold text-gray-900 dark:text-white text-sm">{job.name}</h4>
              </div>
              <span class="text-[10px] text-gray-500 dark:text-slate-500 whitespace-nowrap">{job.startDate.split('-')[0]}</span>
            </div>
            <p class="text-xs font-semibold text-emerald-600 dark:text-emerald-400/80 mb-2">{job.position}</p>
            {job.summary && (
              <p class="text-xs text-gray-600 dark:text-slate-400 mb-3 leading-relaxed">{job.summary}</p>
            )}
            {job.stack && (
              <div class="pt-2 border-t border-gray-200 dark:border-slate-700/30">
                <span class="text-[9px] font-bold uppercase tracking-wider text-gray-500 dark:text-slate-500">Stack: </span>
                <span class="text-[10px] text-gray-500 dark:text-slate-500">{job.stack}</span>
              </div>
            )}
          </article>
        ))}
      </div>
    </div>
  )}
</section>

<!-- Project Image Modal -->
<div id="project-modal" class="fixed inset-0 bg-black/90 backdrop-blur-sm z-50 hidden items-center justify-center p-4" role="dialog" aria-modal="true" aria-labelledby="modal-title">
  <button
    id="modal-close"
    class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors z-10"
    aria-label="Close modal"
  >
    <span class="material-symbols-outlined text-4xl">close</span>
  </button>
  <div class="max-w-5xl w-full">
    <h2 id="modal-title" class="text-white text-2xl font-bold mb-4 text-center"></h2>
    <img
      id="modal-project-image"
      src=""
      alt=""
      class="w-full h-auto rounded-2xl shadow-2xl"
    />
  </div>
</div>

<script>
  function initializeProjectModal() {
    const modal = document.getElementById('project-modal');
    const modalImage = document.getElementById('modal-project-image') as HTMLImageElement;
    const modalTitle = document.getElementById('modal-title');
    const modalClose = document.getElementById('modal-close');
    const jobCards = document.querySelectorAll('.portfolio-job-card');

    // Handle card clicks to open modal
    jobCards.forEach(card => {
      card.addEventListener('click', () => {
        const projectImage = card.getAttribute('data-project-image');
        const companyName = card.getAttribute('data-company');

        if (projectImage && modal && modalImage && modalTitle) {
          modalImage.src = projectImage;
          modalImage.alt = `${companyName} project`;
          modalTitle.textContent = companyName || '';
          modal.classList.remove('hidden');
          modal.classList.add('flex');
          document.body.style.overflow = 'hidden';
        }
      });
    });

    const closeModal = () => {
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
        document.body.style.overflow = '';
      }
    };

    modalClose?.addEventListener('click', closeModal);
    modal?.addEventListener('click', (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal && !modal.classList.contains('hidden')) {
        closeModal();
      }
    });
  }

  // Initialize on load
  initializeProjectModal();

  // Re-initialize on view switches
  document.addEventListener('astro:page-load', initializeProjectModal);
</script>

