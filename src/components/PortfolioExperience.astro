---
interface Job {
  name: string;
  position: string;
  startDate: string;
  endDate?: string;
  summary?: string;
  highlights?: string[];
  keywords?: string[];
  stack?: string;
}

interface Props {
  work: Job[];
}

const { work } = Astro.props;

function formatDateRange(start: string, end?: string): string {
  const formatDate = (dateStr?: string) => {
    if (!dateStr) return 'Present';
    const [year, month] = dateStr.split('-');
    const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    return month ? `${months[parseInt(month) - 1]} ${year}` : year;
  };
  return `${formatDate(start)} — ${formatDate(end)}`;
}

// Company logos (grayscale by default, shown in small circle) - SVG preferred
const companyLogos: Record<string, string> = {
  'CaspianOne Open Banking': '/portfolio/logos/caspianone.png',
  'Climatise': '/portfolio/logos/climatise.svg',
  'Tesco': '/portfolio/logos/tesco.svg',
  'Chase UK': '/portfolio/logos/chase.svg',
  'Cisco': '/portfolio/logos/cisco.svg',
};

// Project images (full-color, shown on card hover as background) - WebP format
const projectImages: Record<string, string> = {
  'CaspianOne Open Banking': '/portfolio/caspianone.webp',
  'Climatise': '/portfolio/climatise.webp',
  'Tesco': '/portfolio/tesco.webp',
  'Chase UK': '/portfolio/chaseuk.webp',
  'Cisco': '/portfolio/cisco.webp',
};

// Split into recent (featured) and earlier roles - show more featured jobs now we have rich descriptions
const recentJobs = work.slice(0, 5);
const earlierJobs = work.slice(5);
---

<section class="mb-6" id="portfolio-experience" aria-labelledby="experience-heading">
  <h2 id="experience-heading" class="text-xs font-bold text-gray-500 dark:text-slate-500 uppercase tracking-widest mb-6 flex items-center gap-2">
    <span class="material-symbols-outlined text-sm" aria-hidden="true">history</span>
    Professional Evolution
  </h2>

  <!-- Recent/Featured roles -->
  <div class="space-y-4 mb-8" role="list" aria-label="Featured work experience">
    {recentJobs.map(job => (
      <article class="portfolio-job-card group relative border-[1.5px] border-gray-900 dark:border-gray-600 rounded-3xl p-6 bg-gray-50 dark:bg-slate-900/30 backdrop-blur border-l-2 transition-all duration-300 overflow-hidden cursor-pointer" data-company={job.name} role="listitem">

        {/* Project image overlay - hidden by default, shown on hover */}
        {projectImages[job.name] && (
          <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-3xl overflow-hidden z-0">
            <img
              src={projectImages[job.name]}
              alt={`${job.name} project`}
              class="w-full h-full object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900/95 via-gray-900/70 to-gray-900/50"></div>
          </div>
        )}

        {/* Content - always visible, elevated above overlay */}
        <div class="relative z-10">
          <div class="flex flex-wrap items-start justify-between gap-3 mb-2">
            <div class="flex items-center gap-3">
              {companyLogos[job.name] && (
                <div class="w-12 h-12 rounded-full overflow-hidden ring-2 ring-gray-200 dark:ring-slate-700 group-hover:ring-white/50 transition-all flex-shrink-0">
                  <img
                    src={companyLogos[job.name]}
                    alt={`${job.name} logo`}
                    class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
                  />
                </div>
              )}
              <h3 class="text-xl font-black text-gray-900 dark:text-white group-hover:text-white transition-colors duration-300">{job.name}</h3>
            </div>
            <span class="px-3 py-1 bg-gray-200 dark:bg-slate-800 group-hover:bg-white/20 text-gray-600 dark:text-slate-400 group-hover:text-white rounded-full text-xs font-semibold transition-all duration-300">
              {formatDateRange(job.startDate, job.endDate)}
            </span>
          </div>

          <p class="text-sm font-semibold text-emerald-600 dark:text-emerald-400 group-hover:text-emerald-300 mb-3 transition-colors duration-300">{job.position}</p>

          {job.summary && (
            <p class="text-gray-900 dark:text-slate-300 group-hover:text-white text-sm mb-4 leading-relaxed transition-colors duration-300">{job.summary}</p>
          )}

          {job.highlights && job.highlights.length > 0 && (
            <ul class="space-y-2 mb-4">
              {job.highlights.map(h => (
                <li class="flex items-start gap-2 text-sm text-gray-900 dark:text-slate-300 group-hover:text-white transition-colors duration-300">
                  <span class="text-emerald-600 dark:text-emerald-500 group-hover:text-emerald-300 mt-0.5 transition-colors duration-300">◦</span>
                  <span set:html={h.replace(/\*\*([^*]+)\*\*/g, '<span class="text-indigo-600 dark:text-indigo-400 group-hover:text-indigo-300 font-medium">$1</span>')} />
                </li>
              ))}
            </ul>
          )}

          {job.stack && (
            <div class="mt-4 pt-4 border-t border-gray-200 dark:border-slate-700/50 group-hover:border-white/30 transition-colors duration-300">
              <span class="text-[10px] font-bold uppercase tracking-wider text-gray-500 dark:text-slate-500 group-hover:text-white/70 transition-colors duration-300">Stack: </span>
              <span class="text-xs text-gray-600 dark:text-slate-400 group-hover:text-white/90 transition-colors duration-300">{job.stack}</span>
            </div>
          )}
        </div>
      </article>
    ))}
  </div>

  <!-- Earlier roles - compact grid -->
  {earlierJobs.length > 0 && (
    <div>
      <h3 class="text-xs font-bold uppercase tracking-widest text-gray-500 dark:text-slate-500 mb-4">Earlier Experience</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4" role="list" aria-label="Earlier work experience">
        {earlierJobs.map(job => (
          <article class="portfolio-job-card group relative border-[1.5px] border-gray-900 dark:border-gray-600 rounded-3xl p-5 bg-gray-50 dark:bg-slate-900/20 backdrop-blur transition-all duration-300 overflow-hidden cursor-pointer" data-company={job.name} role="listitem">

            {/* Project image overlay */}
            {projectImages[job.name] && (
              <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-3xl overflow-hidden z-0">
                <img
                  src={projectImages[job.name]}
                  alt={`${job.name} project`}
                  class="w-full h-full object-cover"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-gray-900/95 via-gray-900/70 to-gray-900/50"></div>
              </div>
            )}

            <div class="relative z-10">
              <div class="flex items-start justify-between gap-2 mb-1">
                <div class="flex items-center gap-2">
                  {companyLogos[job.name] && (
                    <div class="w-8 h-8 rounded-full overflow-hidden ring-1 ring-gray-200 dark:ring-slate-700 group-hover:ring-white/50 transition-all flex-shrink-0">
                      <img
                        src={companyLogos[job.name]}
                        alt={`${job.name} logo`}
                        class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500"
                      />
                    </div>
                  )}
                  <h4 class="font-bold text-gray-900 dark:text-white group-hover:text-white text-sm transition-colors duration-300">{job.name}</h4>
                </div>
                <span class="text-[10px] text-gray-500 dark:text-slate-500 group-hover:text-white/70 whitespace-nowrap transition-colors duration-300">{job.startDate.split('-')[0]}</span>
              </div>
              <p class="text-xs font-semibold text-emerald-600 dark:text-emerald-400/80 group-hover:text-emerald-300 mb-2 transition-colors duration-300">{job.position}</p>
              {job.summary && (
                <p class="text-xs text-gray-600 dark:text-slate-400 group-hover:text-white/90 mb-3 leading-relaxed transition-colors duration-300">{job.summary}</p>
              )}
              {job.stack && (
                <div class="pt-2 border-t border-gray-200 dark:border-slate-700/30 group-hover:border-white/30 transition-colors duration-300">
                  <span class="text-[9px] font-bold uppercase tracking-wider text-gray-500 dark:text-slate-500 group-hover:text-white/70 transition-colors duration-300">Stack: </span>
                  <span class="text-[10px] text-gray-500 dark:text-slate-500 group-hover:text-white/90 transition-colors duration-300">{job.stack}</span>
                </div>
              )}
            </div>
          </article>
        ))}
      </div>
    </div>
  )}
</section>

