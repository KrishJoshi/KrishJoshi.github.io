---
interface Education {
  institution: string;
  area: string;
  studyType?: string;
  startDate: string;
  endDate: string;
  score?: string;
}

interface Props {
  education: Education[];
}

const { education } = Astro.props;
---

<section class="section-box p-6">
  <h2 class="text-xs font-bold text-gray-500 dark:text-slate-500 uppercase tracking-widest mb-6 flex items-center gap-2">
    <span class="material-symbols-outlined text-sm">school</span>
    Education
  </h2>
  <div class="space-y-4">
    {education.map((edu, i) => (
      <div class={i > 0 ? 'pt-4 border-t border-gray-200 dark:border-gray-700' : ''}>
        <div class="font-bold text-sm uppercase">{edu.institution}</div>
        <div class="text-sm text-gray-600 dark:text-gray-400">
          {edu.studyType ? `${edu.studyType} ` : ''}{edu.area}{edu.score ? ` (${edu.score})` : ''}
        </div>
        <div class="text-xs text-gray-500 font-medium mt-1">{edu.startDate} â€” {edu.endDate}</div>
      </div>
    ))}
  </div>
</section>
