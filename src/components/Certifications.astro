---
interface Certificate {
  name: string;
  date: string;
  issuer: string;
  icon?: string;
}

interface Props {
  certificates: Certificate[];
}

const { certificates } = Astro.props;

// Map issuer names to logo images
const issuerLogos: Record<string, string> = {
  'Amazon': '/certifications/img_1.png',
  'Axelos': '/certifications/img.png',
  'Learning Tree': '/certifications/img_2.png'
};
---

<section class="border-[1.5px] border-gray-900 dark:border-gray-600 rounded-3xl p-6">
  <h2 class="text-xs font-bold text-gray-500 dark:text-slate-500 uppercase tracking-widest mb-6 flex items-center gap-2">
    <span class="material-symbols-outlined text-sm">workspace_premium</span>
    Certifications
  </h2>
  <div class="space-y-4">
    {certificates.map(cert => (
      <div class="flex items-start gap-3">
        {issuerLogos[cert.issuer] && (
          <img
            src={issuerLogos[cert.issuer]}
            alt={cert.issuer}
            loading="lazy"
            class="w-12 h-12 rounded-lg object-contain bg-white dark:bg-gray-100 p-1.5 flex-shrink-0 grayscale"
          />
        )}
        {!issuerLogos[cert.issuer] && (
          <div class="w-12 h-12 rounded-lg bg-gray-200 dark:bg-gray-700 flex items-center justify-center flex-shrink-0">
            <span class="material-symbols-outlined text-gray-400 dark:text-gray-500">{cert.icon || 'verified'}</span>
          </div>
        )}
        <div>
          <div class="font-bold text-sm uppercase">{cert.name}</div>
          <div class="text-xs text-gray-500 dark:text-gray-400">{cert.issuer} â€¢ {cert.date}</div>
        </div>
      </div>
    ))}
  </div>
</section>
